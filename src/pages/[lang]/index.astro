---
import ThreeScene from '../../components/ThreeScene.vue';
import LanguagePicker from '../../components/LanguagePicker.astro';
import CreatorEntrance from '../../components/CreatorEntrance.vue';
import '../../styles/global.css';
import { ui } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh-cn' } },
    { params: { lang: 'ja' } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof ui);
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{t('hero.title')} | {t('hero.subtitle_alt')}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Zen+Kaku+Gothic+New:wght@300;400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<ThreeScene client:only="vue" />
		<LanguagePicker />
        <CreatorEntrance client:only="vue" lang={lang as any} />
        
        <main class="overlay">
            <div class="scroll-indicator">
                <div class="mouse"></div>
                <span>{t('scroll.explore')}</span>
            </div>

            <!-- Stage 1: Chaos -->
            <section class="screen" id="stage1">
                <header class="hero">
                    <h1 class="glitch" data-text={t('hero.title')}>{t('hero.title')}</h1>
                    <h2 class="subtitle">{t('hero.subtitle')}</h2>
                </header>

                <div class="content-cards">
                    <div class="card">
                        <h3>{t('stage1.title')}</h3>
                        <p>{t('stage1.desc')}</p>
                    </div>
                </div>
            </section>

            <!-- Stage 2: Structure -->
            <section class="screen" id="stage2">
                <div class="content-cards">
                    <div class="card wide">
                        <h3>{t('stage2.title')}</h3>
                        <p>{t('stage2.desc')}</p>
                    </div>
                </div>
            </section>

            <!-- Stage 3: Crystallization -->
            <section class="screen" id="stage3">
                <div class="content-cards">
                    <div class="card highlight">
                        <h3>{t('stage3.title')}</h3>
                        <p>{t('stage3.desc')}</p>
                    </div>
                </div>
                
                <footer class="footer">
                    <p>Â© 2025 Moyin Project. <br> <span class="mono">{t('footer.phase')}</span></p>
                </footer>
            </section>
        </main>
	</body>
</html>

<style>
/* Reset and Base */
body {
    margin: 0;
    overflow-x: hidden;
    background-color: #000;
    color: white;
    font-family: 'Zen Kaku Gothic New', sans-serif;
}

.overlay {
    position: relative;
    z-index: 10;
    pointer-events: none;
    background: radial-gradient(circle, rgba(0,0,0,0) 0%, #050505 80%);
}

.screen {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    box-sizing: border-box;
    position: relative;
}

/* Scroll Indicator */
.scroll-indicator {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.6;
    transition: opacity 0.5s;
    z-index: 100;
    animation: floating 2s ease-in-out infinite;
}

@keyframes floating {
    0%, 100% { transform: translate(-50%, 0); }
    50% { transform: translate(-50%, -5px); }
}
.scroll-indicator span {
    font-size: 0.7rem;
    font-family: 'Orbitron', sans-serif;
    letter-spacing: 0.1rem;
    text-transform: uppercase;
}
.mouse {
    width: 20px;
    height: 35px;
    border: 2px solid white;
    border-radius: 15px;
    position: relative;
}
.mouse::after {
    content: '';
    width: 4px;
    height: 4px;
    background: white;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 50%;
    animation: scroll-anim 2s infinite;
}
@keyframes scroll-anim {
    0% { opacity: 1; top: 8px; }
    100% { opacity: 0; top: 20px; }
}

.overlay a, .overlay .card {
    pointer-events: auto;
}

.hero {
    text-align: center;
    margin-bottom: 2rem;
}

h1 {
    font-family: 'Orbitron', sans-serif;
    font-size: 5rem;
    letter-spacing: 0.5rem;
    margin: 0;
    text-shadow: 0 0 20px rgba(255, 0, 85, 0.8), 0 0 40px rgba(0, 255, 255, 0.5);
    background: linear-gradient(to bottom, #fff, #aaa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.subtitle {
    font-size: 1.5rem;
    font-weight: 300;
    margin-top: 1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
}

.content-cards {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
}

.card {
    background: rgba(20, 20, 30, 0.4);
    backdrop-filter: blur(15px);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    border-left: 1px solid rgba(255, 255, 255, 0.2);
    border-right: 1px solid rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding: 3rem;
    border-radius: 16px;
    max-width: 320px;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.card.wide {
    max-width: 500px;
    border-top-color: rgba(0, 255, 255, 0.4);
    border-left-color: rgba(0, 255, 255, 0.4);
}

.card.highlight {
    border-top-color: rgba(255, 0, 255, 0.5);
    border-left-color: rgba(255, 0, 255, 0.5);
    box-shadow: 0 0 30px rgba(255, 0, 255, 0.1);
}

.card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 255, 255, 0.1);
    border-color: rgba(0, 255, 255, 0.4);
}

.card h3 {
    font-family: 'Orbitron', sans-serif;
    color: #00ffff;
    margin-top: 0;
    margin-bottom: 1.2rem;
    font-size: 1.3rem;
    letter-spacing: 0.1rem;
}

.card p {
    font-size: 0.95rem;
    line-height: 1.8;
    color: #e5e7eb;
}

.footer {
    position: absolute;
    bottom: 2rem;
    text-align: center;
    width: 100%;
    left: 0;
    font-size: 0.75rem;
    opacity: 0.4;
}

.mono {
    font-family: monospace;
    letter-spacing: 0.05rem;
}

.glitch {
    position: relative;
}
.glitch::before,
.glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
}
.glitch::before {
    color: #0ff;
    z-index: -1;
    animation: glitch-anim-1 2s infinite linear alternate-reverse;
}
.glitch::after {
    color: #f0f;
    z-index: -2;
    animation: glitch-anim-2 2s infinite linear alternate-reverse;
}

@keyframes glitch-anim-1 {
    0% { clip-path: inset(20% 0 80% 0); transform: translate(-2px, 0); }
    20% { clip-path: inset(60% 0 10% 0); transform: translate(2px, 0); }
    40% { clip-path: inset(40% 0 50% 0); transform: translate(-2px, 0); }
    60% { clip-path: inset(80% 0 5% 0); transform: translate(2px, 0); }
    80% { clip-path: inset(10% 0 60% 0); transform: translate(-2px, 0); }
    100% { clip-path: inset(30% 0 20% 0); transform: translate(2px, 0); }
}

@keyframes glitch-anim-2 {
    0% { clip-path: inset(10% 0 60% 0); transform: translate(2px, 0); }
    20% { clip-path: inset(80% 0 5% 0); transform: translate(-2px, 0); }
    40% { clip-path: inset(30% 0 20% 0); transform: translate(2px, 0); }
    60% { clip-path: inset(20% 0 80% 0); transform: translate(-2px, 0); }
    80% { clip-path: inset(60% 0 10% 0); transform: translate(2px, 0); }
    100% { clip-path: inset(40% 0 50% 0); transform: translate(-2px, 0); }
}

@media (max-width: 768px) {
    h1 { font-size: 3rem; }
    .content-cards { flex-direction: column; align-items: center; }
}
</style>

